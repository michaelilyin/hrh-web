{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "strict": true,
    "lib": ["es2018", "dom"],
    "paths": {
      "@hrh/sdk/*": ["src/app/sdk/*"],
      "@hrh/env/*": ["src/app/features/env/*"],
      "@hrh/auth/*": ["src/app/features/auth/*"],
      "@hrh/persons/*": ["src/app/features/persons/*"],
      "@hrh/houses/*": ["src/app/features/houses/*"],
      "@hrh/layout/*": ["src/app/features/basic-layout/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
